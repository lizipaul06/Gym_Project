<h1> Update this class</h1>

<form class="form" method="post" action="/class_times/<%=@class_time.id%>">


  <label for="class_id"> Activity: </label>

  <select id="class_id"  name="class_id" value= "<%=@class_time.activity%>">
  <% for gym_class in @gym_classes %>
      <option value= "<%=gym_class.id%>" > <%=gym_class.activity%></option>
  <% end %>
  </select>

 <label for="date">type:</label>
 <select name="date" value= "<%= @class_time.date %> ">
   <option >Monday </option>
   <option >Tuesday</option>
   <option >Wednesday </option>
   <option >Thursday</option>
   <option >Friday </option>
   <option >Saturday</option>
   <option >Sunday </option>
 </select>

 <hr />
 <label for="time">Time:</label>
<input id="time" type="text" value= "<%=@class_time.time%>" name="time" >

 <label for="capacity" >Spaces Remaining:</label>
<input id="capacity" type="text" value="<%=@class_time.capacity%>" name="capacity" >

 <label for="status">Status:</label>
 <select name="status" value="<%=@class_time.status%>">
   <option >Active</option>
   <option >Deactive</option>
 </select>

 <input class="button" type="submit"  value="Submit update Class Time">
   <hr />
</form>
